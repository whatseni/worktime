{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",
    "rootDir": "./src",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/Calendar.tsx",
      "src/types.ts",
    ],
    "out": "docs",
    "exclude": "src/index.ts"
  }
}